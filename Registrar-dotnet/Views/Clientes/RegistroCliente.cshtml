@{
    Layout = "_ClientLayout";
    ViewData["Title"] = "Registro";
}

@{
    bool badReg = (ViewBag.badReg != null);
    bool notSamePass = (ViewBag.notSamepass != null);
    bool notUser = (ViewBag.notUser != null);
    bool notMail = (ViewBag.notMail != null);
    string display = "";
    bool noRegs = (ViewBag.noRegs != null);
}

<div class="blur-box">
      <div class="main-box">
        <form class="form" action='@Url.Action("RegistroFinal", "Clientes")' id="registerForm" method="POST">
          <span class="main__title">Register</span>
          @if(badReg){
            <p style="margin: 0; color: red">Hubo un error con tu registro</p>
          }
          <input
            type="text"
            required
            placeholder="User"
            class="register__input-user register__input-first"
            name="username"
          />
          @if (notUser){
                <p style='color: red; margin: 0;'>Nombre de usuario no disponible</p>
            }
          <input
            type="email"
            required
            placeholder="Email"
            class="register__input-email"
            name="email"
          />
          @if(notMail){
                <p style='color: red; margin: 0;'>Mail no disponible</p>
            }
          <input
            type="password"
            required
            placeholder="Password"
            class="register__input-password"
            name="password"
            id="password"
          />
          @if(notSamePass) { display = "block"; }
            else{ display = "none"; }
            <p style='display: @display; color: red; margin: 0;' id="alerta">No coinciden las contrase√±as</p>
          <input
            type="password"
            required
            placeholder="Confirm Password"
            class="register__input-password register__input-last"
            name="password2"
            id="password2"
          />
          <br>
            @if(noRegs) {
                <p style='color: red; margin: 0;'>No se puede registrar en este momento. Intente mas tarde</p>
            }else{
                <button class="register__btn" type="submit">Register</button>
            }
        </form>
      </div>

        <script src="~/js/formCheck.js"></script>
        <script src="~/js/queryInfo.js"></script>
    </div>